<.header>
  Test2 <%= @test2.id %>
  <:subtitle>This is a test2 record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/tests/#{@test2}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit test2</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Name"><%= @test2.name %></:item>
</.list>

<.back navigate={~p"/tests"}>Back to tests</.back>

<.modal :if={@live_action == :edit} id="test2-modal" show on_cancel={JS.patch(~p"/tests/#{@test2}")}>
  <.live_component
    module={PokemonDemoWeb.Test2Live.FormComponent}
    id={@test2.id}
    title={@page_title}
    action={@live_action}
    test2={@test2}
    patch={~p"/tests/#{@test2}"}
  />
</.modal>
